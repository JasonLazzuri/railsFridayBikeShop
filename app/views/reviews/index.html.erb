<div class="container">
<h3>Here are all the Reviews for this product!</h3>
<br>
<hr>
<% if @reviews.any? %>
<% @reviews.each do |review| %>
<p><%= link_to review.content, product_review_path(@product,review.id) %> </p>
<br>
<hr>
<% end %>
<% else %>
<p>There are no reviews yet!</p>
<% end %>

</div>
