<!DOCTYPE html>
<html>
  <head>
    <title>Bicycle</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Bicyle Shop Name</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/products">Products</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">

          <% if current_user %>
           <%= current_user.email %> | <%= link_to "Sign out", '/users/sign_out', :method => :delete %>
          <% else %>
           <%= link_to "Sign up", '/users/sign_up' %> | <span class="glyphicon glyphicon-log-in"></span><%= link_to "Sign in", '/users/sign_in' %>
          <% end %>

        </ul>
      </div>
    </nav>
  <body>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <div class="container">
      <%= yield %>

    </div>
  </body>
</html>
